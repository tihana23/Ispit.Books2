
@using Microsoft.AspNetCore.Identity
@using Ispit.Books2

@inject SignInManager<AspNetUser> SignInManager
@inject UserManager<AspNetUser> UserManager

@if (SignInManager.IsSignedIn(User) && await UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "Admin"))
{
    <li class="nav-item">
        <div class="dropdown">
            <a class="nav-link text-dark dropdown-toggle" data-bs-toggle="dropdown" href ="#">
                Admin
            </a>
            <div class="dropdown-menu">
                <a class="nav-link text-dark" asp-area="Admin" asp-controller="ManageBooks" asp-action="Index">ManageBooks</a>
                
            </div>

        </div>
    </li>


}